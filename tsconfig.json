{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": false,
        "rootDir": "src",
        "outDir": "dist",
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "importHelpers": true,
        "strict": true,
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*", "types/*.d.ts"],
    "exclude": ["src/**/*.spec.ts", "node_modules/**/*"]
}
