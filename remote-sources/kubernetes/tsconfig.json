{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "lib": ["es2017", "esnext"],
        "sourceMap": true,
        "outDir": "./dist",
        "allowJs": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "./dist"
    ]
}